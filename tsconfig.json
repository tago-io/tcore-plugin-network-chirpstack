{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": false
  },
  "exclude": [
    "node_module",
    "jest.config.js",
    ".eslintrc.js"
  ],
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  },
}
